/**app.wxss**/

.container {
  min-height: 100%;
  background-color: #f8f8f8;
  font-size: 14px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  overflow: hidden;
  line-height: 1.5em;
  /* text-align: center; */
}

.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 300rpx;
}
.remind-img {
  width: 250rpx;
  height: 250rpx;
  padding-bottom: 25rpx;
}

.remind-text {
  font-size: 12pt;
  line-height: 150%;
}

.section {
  margin: 15px 0;
  clear: both;
}

.btn-area{
  padding: 0 15px;
}

.container wx-input{
  background: #fff;
  padding: 10px 15px;
}

.lists{
    background-color: #FFFFFF;
    font-size: 14px;
    overflow: hidden;
    position: relative;
}

.task-li{
    /*padding: 10px 15px;*/
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.task-li-con{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex: 1;
    padding: 10px 0 10px 15px;
    align-items: center;
}

.icon-done{
    display: block;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: #fff;
    margin-right: 8px;
}

.un-done .icon-done{
    border: 6px solid #1992F5;
}

.lists:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.task-li:before{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    left: 15px;
}
